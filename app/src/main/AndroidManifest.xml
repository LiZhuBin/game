<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.administrator.happygame">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".util.ApplicationUtil"
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon, android:theme">
        <activity android:name="com.github.mmin18.layoutcast.ResetActivity" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mob.tools.MobUIShell"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="AuthorizeAdapter"
                android:value="com.example.administrator.myapplication.adapter.ShareAdapter" />

            <intent-filter>
                <data android:scheme="tencent100371282" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- 调用新浪原生SDK，需要注册的回调activity -->
            <intent-filter>
                <action android:name="com.sina.weibo.sdk.action.ACTION_SDK_REQ_ACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <!-- 集成line客户端登录授权，需要添如下格式的过滤器 -->
            <intent-filter>
                <data android:scheme="line.1477692153" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PersonActivity"
            android:label="用户信息" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".activity.FriendsActivity"
            android:label="我的好友" />
        <activity
            android:name=".activity.ForumActivity"
            android:label="帖子详情" />
        <activity android:name=".activity.RegisterActivity" />
        <activity
            android:name=".activity.AddActivity"
            android:label="约战信息" />
        <activity
            android:name=".activity.NewsActivity"
            android:label="热点" />
        <activity
            android:name=".activity.ChatActivity"
            android:label="聊天" />
        <activity android:name=".activity.SearchActivity" />
        <activity android:name=".activity.GetPhotoActivity" />
        <activity
            android:name=".activity.MessageActivity"
            android:label="消息"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.SetActivity" />
        <activity android:name=".activity.Main2Activity"></activity>
        <activity android:name=".activity.CameraFragmentMainActivity" />
        <activity
            android:name=".activity.AboutActivity"
            android:label="关于" />
        <activity
            android:name=".activity.MyInformationActivity"
            android:label="信息" />
        <activity android:name=".activity.fifth.EditActivity" />
    </application>

</manifest>