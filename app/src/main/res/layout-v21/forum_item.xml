<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:stv="http://schemas.android.com/tools"
    style="@style/CardView_style"
    app:cardCornerRadius="@dimen/dp_10"
    android:layout_height="200dp"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:id="@+id/forum_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="aaaaaaaaaaaaaaaaaaasssssssssssssssssssssaaaa"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        <ImageView
            android:id="@+id/forum_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/image_scrolling_head"
            android:layout_weight="1"
            />
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:alpha="0.2"
        android:background="#000"
       />
        <include
        android:id="@+id/include"
        layout="@layout/forum_item_bottom"
        />
</FrameLayout>
</LinearLayout>

</android.support.v7.widget.CardView>