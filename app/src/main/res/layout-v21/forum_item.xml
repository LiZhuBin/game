<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:stv="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:foreground = "?attr/selectableItemBackground"
    app:cardBackgroundColor="?android:attr/colorControlHighlight"
    android:stateListAnimator="@drawable/card_lift_on_touch"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:id="@+id/forum_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="aaaaaaaaaaaaaaaaaaasssssssssssssssssssssaaaa"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/forum_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:scaleType="centerCrop"
            android:src="@drawable/image_scrolling_head"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:alpha="0.6"
        android:background="#000"
        >
        <include
        android:id="@+id/include"
        layout="@layout/forum_item_bottom"
        />
    </LinearLayout>


</FrameLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>