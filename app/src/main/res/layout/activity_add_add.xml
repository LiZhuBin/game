<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    android:orientation="vertical"
    android:transitionName="shareNames">

    <include layout="@layout/layout_toolbar_collapsing_base" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="778dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"

            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/Info_margin">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_sort" />

                    <com.alimuzaffar.lib.widgets.AnimatedEditText
                        android:id="@+id/activity_add_forum_title_edittext"
                        style="@style/animated_edit_text"
                        android:hint="标题"
                        app:animationType="fromRight" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/Info_margin">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_type" />

                    <com.alimuzaffar.lib.widgets.AnimatedEditText
                        android:id="@+id/activity_add_forum_type_edittext"
                        style="@style/animated_edit_text"
                        android:hint="游戏类型"
                        app:animationType="fromRight" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/Info_margin">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_content" />

                    <com.alimuzaffar.lib.widgets.AnimatedEditText
                        android:id="@+id/activity_add_forum_date_edittext"
                        style="@style/animated_edit_text"
                        android:hint="日期"
                        app:animationType="fromRight" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/Info_margin">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_place" />

                    <com.alimuzaffar.lib.widgets.AnimatedEditText
                        android:id="@+id/activity_add_forum_place_edittext"
                        style="@style/animated_edit_text"
                        android:hint="地点"
                        app:animationType="fromRight" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/Info_margin">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/icon_content" />

                    <com.alimuzaffar.lib.widgets.AnimatedEditText
                        android:id="@+id/activity_add_forum_content_edittext"
                        style="@style/animated_edit_text"
                        android:layout_height="80dp"
                        android:gravity="top|left"
                        android:hint="内容"
                        app:animationType="fromRight" />

                </LinearLayout>

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/add_chooseImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="#444444"
                    android:src="@drawable/icon_image" />


                <com.allen.library.SuperButton
                    android:id="@+id/activity_add_forum_send_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:text="立即发送"
                    android:textSize="20dp"
                    app:sCornersRadius="20dp"
                    app:sSolidColor="@color/colorAccent"
                    app:sStrokeColor="@color/black" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
