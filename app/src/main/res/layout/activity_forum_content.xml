<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_forum_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/image_scrolling_head"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carmen冯"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/icon_image"
        android:layout_toEndOf="@+id/icon_image"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="41分钟前"
        android:layout_toRightOf="@+id/icon_image"
        android:layout_toEndOf="@+id/icon_image"
        android:layout_below="@+id/username"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="对于笔记本电脑的求助"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:layout_below="@+id/icon_image"/>

    <TextView
        android:id="@+id/detile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="师兄师姐或专业认识 本新生纺织工程，请问买什么牌的电脑好呀？具体到型号，要求不多，能上网刷剧"
        android:textSize="16sp"
        android:layout_below="@+id/title"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>