<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:src="@drawable/icon_head" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:layout_marginTop="40dp"
            android:layout_weight="0.05"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40px"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150px"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="30px"
                            android:paddingRight="30px">

                            <TextView
                                android:layout_width="120px"
                                android:layout_height="wrap_content"
                                android:text="@string/nickname"
                                android:textColor="@color/black0"
                                android:textSize="35px" />

                            <EditText
                                android:id="@+id/etNick"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:hint="例如：陈晨"
                                android:textColorHint="@color/gray3"
                                android:textSize="35px" />

                        </LinearLayout>

                        <View
                            android:id="@+id/vLineNick"
                            style="@style/Line" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivAlbum"
                        android:layout_width="100px"
                        android:layout_height="150px"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher"
                        android:visibility="gone" />

                </LinearLayout>

                <View style="@style/Line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="30px"
                    android:paddingRight="30px">

                    <TextView
                        android:id="@+id/tvAreaCode"
                        android:layout_width="120px"
                        android:layout_height="wrap_content"
                        android:text="+86"
                        android:textColor="@color/black0"
                        android:textSize="35px" />

                    <EditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="你的手机号码"
                        android:inputType="phone"
                        android:text=""
                        android:textColorHint="@color/gray3"
                        android:textSize="35px" />

                </LinearLayout>

                <View
                    android:id="@+id/vLinePhone"
                    style="@style/Line" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="30px"
                        android:paddingRight="30px">

                        <TextView
                            android:layout_width="120px"
                            android:layout_height="wrap_content"
                            android:text="@string/password"
                            android:textColor="@color/black0"
                            android:textSize="35px" />

                        <EditText
                            android:id="@+id/etPwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="56px"
                            android:background="@null"
                            android:hint="填写密码"
                            android:inputType="textPassword"
                            android:text=""
                            android:textColorHint="@color/gray3"
                            android:textSize="35px" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivSeePwd"
                        android:layout_width="60px"
                        android:layout_height="60px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        android:src="@mipmap/ic_see_pwd" />
                </RelativeLayout>

                <View
                    android:id="@+id/vLinePwd"
                    style="@style/Line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="30px"
                    android:paddingRight="20px">

                    <TextView
                        android:layout_width="120px"
                        android:layout_height="wrap_content"
                        android:text="@string/verification_code"
                        android:textColor="@color/black0"
                        android:textSize="35px" />

                    <EditText
                        android:id="@+id/etVerifyCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:text=""
                        android:textColorHint="@color/gray3"
                        android:textSize="35px" />

                    <Button
                        android:id="@+id/btnSendCode"
                        android:layout_width="200px"
                        android:layout_height="70px"
                        android:background="@color/colorAccent"
                        android:text="发送验证码"
                        android:textColor="@color/white"
                        android:textSize="35px" />

                </LinearLayout>

                <View
                    android:id="@+id/vLineVertifyCode"
                    style="@style/Line" />

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="90px"
                    android:layout_marginBottom="30px"
                    android:layout_marginTop="40px"
                    android:background="@color/colorAccent"
                    android:enabled="false"
                    android:text="注册"
                    android:textColor="@color/white"
                    android:textSize="30px" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----------------------------------" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="其他账号登录" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="----------------------------------" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <include layout="@layout/layout_bottom_share" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
