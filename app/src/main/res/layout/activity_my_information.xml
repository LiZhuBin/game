<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <include layout="@layout/toolbar" />

        <include layout="@layout/layout_information" />

    </LinearLayout>

    <io.codetail.widget.RevealFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/credit_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:visibility="invisible">

            <com.example.administrator.happygame.my_ui.CreditView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/dashboard_view_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </FrameLayout>

    </io.codetail.widget.RevealFrameLayout>

</FrameLayout>