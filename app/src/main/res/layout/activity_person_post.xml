<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <FrameLayout
        android:id="@+id/toolbar_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">


        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rightdaohangtiao">


            <ImageView
                android:id="@+id/Refresh2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|right"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/activity_person_post_title"
                style="@style/Title_textstyle"
                android:layout_gravity="left|center"
                android:layout_marginLeft="16dp"
                android:text="热帖" />

        </FrameLayout>
    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_left">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/person_post_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</LinearLayout>
