<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/sea"
    android:orientation="vertical"
    >
 

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:layout_marginTop="50dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40px"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="150px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="30px"
                        android:paddingRight="30px">

                        <TextView
                            android:layout_width="120px"
                            android:layout_height="wrap_content"
                            android:text="@string/nickname"
                            android:textColor="@color/white"
                            android:textSize="35px" />

                        <EditText
                            android:id="@+id/etNick"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:hint="例如：陈晨"
                            android:textColorHint="@color/gray4"
                            android:textSize="35px" />

                    </LinearLayout>

                    <View
                        android:id="@+id/vLineNick"
                        style="@style/Line" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivAlbum"
                    android:layout_width="100px"
                    android:layout_height="150px"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="gone" />

            </LinearLayout>

            <View style="@style/Line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30px"
                android:paddingRight="30px">

                <TextView
                    android:id="@+id/tvAreaCode"
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:text="+86"
                    android:textColor="@color/white"
                    android:textSize="35px" />

                <EditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="你的手机号码"
                    android:inputType="phone"
                    android:text=""
                    android:textColorHint="@color/gray4"
                    android:textSize="35px" />

            </LinearLayout>

            <View
                android:id="@+id/vLinePhone"
                style="@style/Line" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="30px"
                    android:paddingRight="30px">

                    <TextView
                        android:layout_width="120px"
                        android:layout_height="wrap_content"
                        android:text="@string/password"
                        android:textColor="@color/white"
                        android:textSize="35px" />

                    <EditText
                        android:id="@+id/etPwd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="56px"
                        android:background="@null"
                        android:hint="填写密码"
                        android:inputType="textPassword"
                        android:text=""
                        android:textColorHint="@color/gray4"
                        android:textSize="35px" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivSeePwd"
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:src="@mipmap/ic_see_pwd" />
            </RelativeLayout>

            <View
                android:id="@+id/vLinePwd"
                style="@style/Line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90px"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="30px"
                android:paddingRight="20px">

                <TextView
                    android:layout_width="120px"
                    android:layout_height="wrap_content"
                    android:text="@string/verification_code"
                    android:textColor="@color/white"
                    android:textSize="35px" />

                <EditText
                    android:id="@+id/etVerifyCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:text=""
                    android:textColorHint="@color/gray4"
                    android:textSize="35px" />

                <Button
                    android:id="@+id/btnSendCode"
                    android:layout_width="200px"
                    android:layout_height="70px"
                    android:background="@color/colorAccent"
                    android:text="发送验证码"
                    android:textColor="@color/white"
                    android:textSize="35px" />

            </LinearLayout>

            <View
                android:id="@+id/vLineVertifyCode"
                style="@style/Line" />


            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/login_edit_layout"
                android:layout_marginLeft="85dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="25dp"
                android:text="注册"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:background="@drawable/button_selector"
                android:gravity="center" />
        </LinearLayout>

</LinearLayout>
