<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >


    <TextView
        android:id="@+id/Text_Position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="20dp"
        android:text="当前位置:\nProvince(省份):-------\nCity(城市):-------------\nDistrict(区):------------\nStreet:(街道):----------\nStore店名:--------------"
        android:textSize="14dp"
        android:visibility="invisible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:id="@+id/Text_SetPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:padding="20dp"
            android:text="面基位置: \n\nDistrict(区):------------\n\nStore店名:--------------"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/Icon_SetPosition"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="37dp"
            android:layout_marginRight="37dp"
            android:padding="15dp"
            android:src="@drawable/seticon_baiduicon" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Icon_SetPosition"
            android:layout_alignStart="@+id/Icon_SetPosition"
            android:layout_below="@+id/Icon_SetPosition"
            android:gravity="center"
            android:text="(打开地图选择)"
            android:textSize="10dp" />


    </RelativeLayout>

</LinearLayout>