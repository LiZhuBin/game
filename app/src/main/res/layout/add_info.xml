    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/add">

<fragment
    android:layout_width="80dp"
    android:layout_height="match_parent"
    android:id="@+id/add_left_fragment"
    android:name="com.example.administrator.myapplication.child_fragment.LeftFragment"
    />

<fragment
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/add_right_fragment"
