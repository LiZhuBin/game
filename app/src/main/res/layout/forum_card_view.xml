<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    android:padding="10dp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_image"
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/image_scrolling_head"/>
    <TextView android:id="@+id/username"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/icon_image"
        android:layout_toRightOf="@+id/icon_image"
        android:textSize="16sp"
        android:text="Carmen冯"/>
    <TextView android:id="@+id/time"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@+id/icon_image"
        android:layout_toRightOf="@+id/icon_image"
        android:text="41分钟前"
        android:layout_below="@+id/username"/>
    <TextView android:id="@+id/title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:text="对于笔记本电脑的求助"
        android:layout_below="@+id/icon_image"
        android:textColor="@android:color/black"/>
    <TextView android:id="@+id/detile"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:text="师兄师姐或专业认识 本新生纺织工程，请问买什么牌的电脑好呀？具体到型号，要求不多，能上网刷剧"
        android:layout_below="@+id/title"/>
    <ImageView android:id="@+id/image"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/detile"
        android:scaleType="centerCrop"/>
</RelativeLayout>