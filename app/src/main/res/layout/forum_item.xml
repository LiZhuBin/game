<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:stv="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="?android:attr/colorControlHighlight"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:id="@+id/forum_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="aaaaaaaaaaaaaaaaaaasssssssssssssssssssssaaaa"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        <ImageView
            android:id="@+id/forum_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="30dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image_scrolling_head" />
        <include
            android:id="@+id/include"
            layout="@layout/forum_item_bottom" />
    </LinearLayout>


</android.support.v7.widget.CardView>