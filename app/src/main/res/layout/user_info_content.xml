<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <com.allen.library.SuperTextView
                android:id="@+id/my_activities"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                stv:sLeftTextString="我的活动"
               />

            <com.allen.library.SuperTextView
                android:id="@+id/my_collection"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="我的收藏"
   />

            <com.allen.library.SuperTextView
                android:id="@+id/my_friends"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="我的好友"
              />

            <com.allen.library.SuperTextView
                android:id="@+id/my_reading"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="最近浏览"
            />

            <com.allen.library.SuperTextView
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                stv:sLeftTextString="关于"
            />

            <com.allen.library.SuperTextView
                android:id="@+id/imports"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                stv:sLeftTextString="退出账号"
               />
        </LinearLayout>
    </ScrollView>

</LinearLayout>